%table.following
  %tr
    %td.main
      %h1= @title

      - if @users.any?
        %ul.users
          = render @users
        = will_paginate
    %td.sidebar.round
      %strong Name
      = @user.name
      %br
      %strong URL
      = link_to @user.name, user_path(@user)
      %br
      %strong Microposts
      = @user.microposts.count
      = render 'shared/stats'
      - if @users.any?
        - @users.each do |user|
          = link_to gravatar_for(user, :size => 30), user
