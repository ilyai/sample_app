%tr
  %td.micropost
    %span.content= micropost.content
    %span.timestamp
      Posted
      = time_ago_in_words(micropost.created_at)
      ago
  - if current_user?(micropost.user)
    %td
      = link_to 'delete', micropost, :method => :delete,
        :confirm => "Are you sure?",
        :title => micropost.content
